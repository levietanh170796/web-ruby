                        <img style="display: none" id="6" src = <%= asset_path "products/" + rand(1..40).to_s + ".jpg" %> />
                        <img style="display: none" id="7" src = <%= asset_path "products/" + rand(1..40).to_s + ".jpg" %> />
                        <img style="display: none" id="8" src = <%= asset_path "products/" + rand(1..40).to_s + ".jpg" %> />
                        <img style="display: none" id="9" src = <%= asset_path "products/" + rand(1..40).to_s + ".jpg" %> />
                        <img style="display: none" id="10" src = <%= asset_path "products/" + rand(1..40).to_s + ".jpg" %> />
                        
                  </div>
                </form>
            </div>

            <script>
                
