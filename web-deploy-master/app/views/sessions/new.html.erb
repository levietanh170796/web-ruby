<% provide :title, "Log in" %>
<h1>Login</h1>

<div class="login">
  <%= form_for :session, url: login_path do |f| %>
    <%= f.email_field :email, class: "email", placeholder: "EMAIL" %>
    <%= f.password_field :password, class: "password", placeholder: "PASSWORD" %>
    <%= link_to t("Forgot your password?"), new_password_reset_path %>
    <div class="remember">
      <p>Memorize</p>
      <%= f.label :remember_me, class: "switch" do %>
        <%= f.check_box :remember_me %>
        <span class="slider round"></span>
      <% end %>
    </div>

    <%= f.submit "Login", class: "btn-login" %>
  <% end %>

  <p>New user? <%= link_to " Sign up now!", signup_path %></p>
  <%= link_to (raw('<i class="fa fa-facebook" aria-hidden="true"></i>
    <p>Connect with facebook</p>')), "/auth/facebook", id: "sign_in"%>
</div>
